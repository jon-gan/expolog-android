<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/hierarchy_item_padding_top_bottom"
    android:paddingBottom="@dimen/hierarchy_item_padding_top_bottom">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="3">

        <TextView
            android:id="@+id/hierarchy_exposures"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hierarchy_header_activity"
            style="@style/TextViewBody"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/hierarchy_edit_rating"
            android:textColor="@color/hierarchyNumberExposures"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/hierarchy_discomfort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hierarchy_header_activity"
            style="@style/TextViewBody"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/hierarchy_edit_rating"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/hierarchy_avoidance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hierarchy_header_activity"
            style="@style/TextViewBody"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/hierarchy_edit_rating"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/hierarchy_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hierarchy_header_activity"
        style="@style/TextViewBody"
        android:gravity="center_vertical"
        android:layout_weight="2"
        />

</LinearLayout>